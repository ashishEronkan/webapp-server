<!DOCTYPE html>
<html>

<head profile="http://www.w3.org/2005/10/profile">
	<!-- Meta Stuff for the Browser to render correctly -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Other Meta Stuff for seo/kicks -->
	<meta name="description" content="PLant.Works Industrial Internet of Things (IIoT) / Industry 4.0 Portal">

	<!-- Title: Will change based on the actual slogan or whatever -->
	<title><%- title %></title>

	<!-- Mandatory favicon.ico link -->
	<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

	<!-- Google Font includes, etc. -->
	<link href="//fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i|Noto+Serif:400,400i,700,700i&subset=devanagari" rel="stylesheet" type="text/css" media="all">
	<link href="//fonts.googleapis.com/css?family=Keania+One" rel="stylesheet" type="text/css" media="all">
	<link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css" media="all">

	<!-- Vendor  styles -->
	<link integrity="" rel="stylesheet" href="/css/vendor.css">

	<!-- jquery plugin styles -->
	<link href="//cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.min.css" rel="stylesheet" type="text/css" media="all">

	<!-- Application Styles -->
	<link integrity="" rel="stylesheet" href="/css/plantworks.css">

	<!-- Miscellaneous client-side data -->
	<script type="application/javascript">
		window.developmentMode = <%= developmentMode %>;
	</script>
</head>

<body class="grey overflow-none">
	<!-- Ember stuff... -->
	<script src="/js/vendor.js"></script>

	<!-- Ember template compiler - for dynamic compilation of templates, whenever we require it... -->
	<script type="application/javascript" src="/ember-template-compiler.js"></script>

	<!-- jquery plugin stuff... -->
	<script src="//cdnjs.cloudflare.com/ajax/libs/croppie/2.6.4/croppie.min.js"></script>

	<!-- Setup global stuff, DEBUG flags and global error handlers -->
	<script type="application/javascript">
	$.ajaxSetup({
		'cache': <%= !developmentMode %>,
		'xhrFields': {
			'withCredentials': true
		}
	});

	Ember.ENV.RAISE_ON_DEPRECATION = false;
	Ember.ENV.LOG_STACKTRACE_ON_DEPRECATION = <%= developmentMode %>;
	Ember.run.backburner.DEBUG = <%= developmentMode %>;
	</script>

	<!-- Primus - realtime websocket connection stuff -->
	<script type="application/javascript" src="/websockets/primus.js"></script>

	<!-- App.js - The Ember App Definitions -->
	<script src="/js/plantworks.js"></script>

	<!-- Setup the ember routes, and start the App -->
	<script type="application/javascript">
		window.PlantWorksApp = require('plantworks/app')['default'].create({
			"LOG_RESOLVER": <%= developmentMode %>,

			"LOG_TRANSITIONS": <%= developmentMode %>,
			"LOG_TRANSITIONS_INTERNAL": <%= developmentMode %>,

			"LOG_ACTIVE_GENERATION": <%= developmentMode %>,
			"LOG_VIEW_LOOKUPS": <%= developmentMode %>,

			"LOG_BINDINGS": <%= developmentMode %>,

			"name": "plantworks",
			"version": "2.4.3"
		});
	</script>
</body>

</html>
